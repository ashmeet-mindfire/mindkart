<%= form_with(model: book, local: true) do |f| %>
<% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
    <div class="row mb-3">
        <div class="col-sm">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
        </div>
            <div class="col-sm">
            <%= f.label :author, class: "form-label" %>
            <%= f.text_field :author, class: "form-control" %>
        </div>
            <div class="col-sm">
            <%= f.label :isbn, class: "form-label text-uppercase" %>
            <%= f.text_field :isbn, class: "form-control" %>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-4">
            <%= f.label :price, class: "form-label" %>
            <%= f.number_field :price, class: "form-control" %>
        </div>

        <div class="col-sm">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_field :description, class: "form-control" %>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm">
            <%= f.label :stock_quantity, class: "form-label" %>
            <%= f.number_field :stock_quantity, class: "form-control" %>
        </div>

        <div class="col-sm">
            <%= f.label :published_date, class: "form-label" %>
            <%= f.date_field :published_date, class: "form-control" %>
        </div>
        <div class="col-sm">
            <%= f.label :publisher, class: "form-label" %>
            <%= f.text_field :publisher, class: "form-control" %>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm">
            <%= f.label :category, class: "form-label" %><br />
            <%= f.select :category_id, options_from_collection_for_select(@categories, :id, :name), {}, { class: 'form-select' } %>
        </div>

        <div class="col-sm">
            <%#= f.label :cover_image, class: "form-label" %>
            <%#= f.text_field :cover_image, class: "form-control" %>
            <%= f.label :image, class: "form-label" %>
            <%= f.file_field :image, class: "form-control" %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <%= f.submit @book.persisted? ? 'Update Book' : 'Create Book', class: 'btn btn-secondary' %>
        </div>
    </div>
</div>


<% end %>