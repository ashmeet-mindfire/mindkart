<h1>Dashboard</h1>

<div class="mt-4 d-flex justify-content-between align-items-center">
    <h2 class="">Books</h2>
    <%= link_to "Add Book", admin_book_new_path, class:"btn btn-secondary" %>
</div>

<table class="table table-striped mt-2">
  <thead>
    <tr class="table-dark">
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
      <th scope="col">Genre</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Stock</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

  <% @books.each do |book| %>
      <tr>
      <th scope="row"><%= book.id%></th>
      <td><%= book.title%></td>
      <td><%= book.author%></td>
      <td><%= book.genre%></td>
      <td><%= book.description[0..50]%>...</td>
      <td><%= book.price%></td>
      <td><%= book.stock_quantity%></td>
      <td><%= link_to image_tag("icons/delete-icon.svg"), delete_book_path(book.id), method: :delete %><%# link_to image_tag("icons/view-icon.svg"), friend %> <%#= link_to image_tag("icons/edit-icon.svg"), edit_friend_path(friend.id) %> <%# link_to "#{friend.posts_count}", friend_posts_path(friend.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
