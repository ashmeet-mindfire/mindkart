<h1>Add New Book</h1>

<%= form_with(model: @book, url: admin_book_new_path, method: :post) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>

  <div class="field">
    <%= f.label :ISBN %><br />
    <%= f.text_field :ISBN %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :stock_quantity %><br />
    <%= f.number_field :stock_quantity %>
  </div>

  <div class="field">
    <%= f.label :published_date %><br />
    <%= f.date_field :published_date %>
  </div>

  <div class="field">
    <%= f.label :publisher %><br />
    <%= f.text_field :publisher %>
  </div>

  <div class="field">
    <%= f.label :genre %><br />
    <%= f.text_field :genre %>
  </div>

  <div class="field">
    <%= f.label :cover_image %><br />
    <%= f.text_field :cover_image %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<%= link_to 'Back to Books', admin_path %>